#!/bin/bash

clear

declare -A applications

applications=(
  ["abook"]="abook"
  ["calcure"]="calcure"
  ["fend"]="fend"
  ["todo.txt"]="todo.sh list"
  ["regect"]="regect"
  ["Television"]="tv"
  ["radio"]="radio" # Custom script (a bit like this one)
  ["LazyGit"]="lazygit -sm full" # Added "-sm full" as the popup is too small to display side-by-side diff (using delta pager)
  # NOTE: The popup is also too small to open diffview in Neovim (below).
  #       We cannot modify the popup size on the fly, but we can set an initial width and height
  #       to be significantly larger instead (I have done this for an alt+g shortcut that opens the full LazyGit view)
  # ["Diff"]="nvim +DiffviewOpen ."
  ["serie"]="serie" # NOTE: We should also set this as the git graph alias, right?
)

APP=$(gum choose "${!applications[@]}")

[[ $APP == "" ]] && exit 1

eval "${applications[$APP]}"
