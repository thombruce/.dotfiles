#!/bin/bash

declare -A stations

# Sources:
# - https://en.everybodywiki.com/List_of_BBC_radio_stream_URLs
stations=(
  ["BBC Radio 1"]="http://a.files.bbci.co.uk/ms6/live/3441A116-B12E-4D2F-ACA8-C1984642FA4B/audio/simulcast/hls/nonuk/pc_hd_abr_v2/ak/bbc_radio_one.m3u8"
  ["BBC Radio 2"]="http://a.files.bbci.co.uk/ms6/live/3441A116-B12E-4D2F-ACA8-C1984642FA4B/audio/simulcast/hls/nonuk/pc_hd_abr_v2/ak/bbc_radio_two.m3u8"
)

STATION=$(gum choose "${!stations[@]}")

[[ $STATION == "" ]] && echo "Exiting..." && exit 1

echo "Now playing $STATION"

mpv "${stations[$STATION]}"
