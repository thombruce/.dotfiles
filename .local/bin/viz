#!/bin/bash

declare -A visualizers

# Sources:
# - https://en.everybodywiki.com/List_of_BBC_radio_stream_URLs (I seem to be having the best success with Cloudfront URLs from here)
visualizers=(
  ["Matrix"]="rusty-rain -C 0,139,139 -H 255,255,255 -g jap -s"
  # TODO: Investigate/fix broken rusty-rain invocation.
  #       It works without args, but we want those args in place.
  ["Audio Visualizer"]="cava"
  ["Pipes"]="pipes.sh"
)

VIZ=$(gum choose "${!visualizers[@]}")

[[ $VIZ == "" ]] && exit 1

eval "${visualizers[$VIZ]}"
